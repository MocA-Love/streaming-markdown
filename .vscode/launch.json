{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Test",
			"request": "launch",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run",
				"test",
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/smd_test_setup.js",
			],
			"type": "node",
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "Launch Chrome against localhost",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}",
		}
	]
}
